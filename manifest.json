{
  "manifest_version": 2,
  "name": "YouTube Summarizer Co-pilot",
  "version": "4.6",
  "description": "Adds buttons to YouTube to summarize videos by sending either the link or the full transcript to Gemini.",
  "permissions": [
    "storage",
    "tabs",
    "https://*.youtube.com/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content_scripts/youtube_scraper.js"],
      "css": ["content_scripts/style.css"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/star-icon-16.svg",
      "48": "icons/star-icon-48.svg"
    },
    "default_title": "YouTube Summarizer"
  },
  "icons": {
    "16": "icons/star-icon-16.svg",
    "48": "icons/star-icon-48.svg"
  },
  "web_accessible_resources": [
    "icons/summarize-icon.svg"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-summarizer-copilot@kush-chou.github.io",
      "data_collection_permissions": {
        "allow_opt_out": true,
        "description": "This extension does not collect any personal data.",
        "required": ["none"]
      },
      "update_url": "https://kush-chou.github.io/youtube-summarizer-copilot/updates.json"
    }
  }
}