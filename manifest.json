{
  "manifest_version": 3,
  "name": "YouTube Summarizer Co-pilot",
  "version": "4.7",
  "description": "Adds buttons to YouTube to summarize videos by sending either the link or the full transcript to Gemini.",
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content_scripts/youtube_scraper.js"],
      "css": ["content_scripts/style.css"]
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content_scripts/gemini_automator.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/star-icon-16.svg",
      "48": "icons/star-icon-48.svg"
    },
    "default_title": "YouTube Summarizer",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/star-icon-16.svg",
    "48": "icons/star-icon-48.svg"
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/summarize-icon.svg"],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-summarizer-copilot@kush-chou.github.io",
      "data_collection_permissions": {
        "required": ["none"]
      },
      "update_url": "https://kush-chou.github.io/youtube-summarizer-copilot/updates.json"
    }
  }
}
